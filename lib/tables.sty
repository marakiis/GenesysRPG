%%%%%
% Default table setup
%%%%%
\RequirePackage{caption}
\RequirePackage{float}
\captionsetup[table]{justification=raggedright, font={sf, bf, Large, color=concept}, skip=0.5ex}


\newcommand\HeadRow{\rowfont{\noindent\sffamily\bfseries\color{white}}\rowcolor{tablegold}}
\newcommand\RowColors{\rowcolors{2}{white}{tableblue}}

\newenvironment{GenesysTable}[1]{
    \par\vspace*{8pt}\noindent
    \rowcolors{2}{white}{tableblue}
    \tabularx{\textwidth}{#1}
      \rowcolor{tablegold}
  }
{\endtabularx}

%%%%%
% Spacing for the Special line on tables
%%%%%

\newcommand\Special[1]{%
\parbox[c]{\linewidth}{\vspace*{0.3em}\raggedright #1}\\[0.3em]
}

%%%%%
% Character sheet tables
%%%%%

\newcolumntype{b}{>{\hsize=.40\hsize}X}
\newcolumntype{m}{>{\hsize=.25\hsize\centering}X}
\newcolumntype{s}{>{\hsize=.15\hsize\centering}X}

\newenvironment{SkillTable}[1]
{
  \sffamily\noindent
  \rowcolors{2}{white}{tableblue}
  \tabularx{\columnwidth}{b m s b}%
    \rowcolor{tablegold}
    \textbf{#1} & \textbf{Carriere} & \textbf{Rang} & \textbf{Des}\\
    \hline
}
{\endtabularx}


\newcommand{\Skills}[5]
{
  \bfseries #1 & #2 & #3 & \noindent\Repeat{#4}{\ProficiencyDie}\Repeat{#5}{\AbilityDie} \\
}

\newcommand{\Repeat}[2]%
{
  \newcount\foo
  \foo=#1
  \loop
    \ifnum \foo>0
      #2
      \advance \foo -1
  \repeat
}
